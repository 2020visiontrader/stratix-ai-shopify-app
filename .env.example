# =================================
# STRATIX AI SHOPIFY APP - Environment Configuration
# =================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =================================
# DATABASE CONFIGURATION
# =================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_SCHEMA=public

# Prisma Database URL (if using Prisma instead of Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/stratix_ai_dev

# =================================
# SHOPIFY CONFIGURATION
# =================================

# Shopify App Credentials
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_APP_URL=https://your-ngrok-url.ngrok.io
SHOPIFY_SCOPES=read_products,write_products,read_customers,read_orders,read_analytics,read_content,write_content

# Shopify Webhook Endpoints
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret
HOST=your-ngrok-url.ngrok.io
NGROK_URL=https://e8f7-182-253-51-137.ngrok-free.app

# =================================
# AI/ML CONFIGURATION
# =================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TOP_P=1
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# =================================
# AUTHENTICATION & SECURITY
# =================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
SESSION_SECRET=your_session_secret_here

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_SECRET=your-hash-secret-for-data-integrity

# =================================
# PAYMENT & BILLING
# =================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =================================
# EMAIL & NOTIFICATIONS
# =================================

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@stratix-ai.com
SENDGRID_FROM_NAME=Stratix AI

# =================================
# ANALYTICS & TRACKING
# =================================

# Google Analytics
GA_TRACKING_ID=UA-your-tracking-id

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# =================================
# STORAGE & CDN
# =================================

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=stratix-ai-uploads

# =================================
# RATE LIMITING & CACHING
# =================================

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# LOGGING & MONITORING
# =================================

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn

# Log Level
LOG_LEVEL=info

# =================================
# DEVELOPMENT TOOLS
# =================================

# Ngrok (for local development with Shopify webhooks)
NGROK_AUTH_TOKEN=your-ngrok-auth-token
NGROK_SUBDOMAIN=your-preferred-subdomain

# =================================
# FEATURE FLAGS
# =================================

# Feature Toggles
ENABLE_ANALYTICS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_ADVANCED_METRICS=true
ENABLE_BETA_FEATURES=false
